{
    "name": "wikisource/wscontest",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "description": "Web-based tool for scoring Wikisource contests.",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "ext-ctype": "*",
        "ext-iconv": "*",
        "addwiki/mediawiki-api": "^0.7",
        "doctrine/annotations": "^1.10",
        "doctrine/doctrine-bundle": "^2.1",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.4.*",
        "symfony/security-csrf": "5.4.*",
        "symfony/yaml": "5.4.*",
        "twig/extra-bundle": "^2.12 || ^3.0",
        "twig/twig": "^2.12 || ^3.0",
        "wikimedia/toolforge-bundle": "^1.3",
        "wikisource/api": "^2.0"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^6.5",
        "mediawiki/mediawiki-codesniffer": "^38.0",
        "mediawiki/minus-x": "^1.0",
        "phan/phan": "^4.0",
        "symfony/browser-kit": "5.4.*",
        "symfony/css-selector": "5.4.*",
        "symfony/maker-bundle": "1.25.*",
        "symfony/phpunit-bridge": "5.4.*",
        "symfony/web-profiler-bundle": "5.4.*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "platform": {
            "php": "7.2.31"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "composer validate",
            "phpcs -s .",
            "./bin/console lint:twig ./templates",
            "./bin/console lint:yaml ./config",
            "minus-x check .",
            "phan --allow-polyfill-parser --load-baseline=./.phan/baseline.php"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    }
}
